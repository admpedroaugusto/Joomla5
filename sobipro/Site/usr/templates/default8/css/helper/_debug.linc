// Helper file with test classes and for debug styles

.SobiPro.default8 {

	[data-debug=development] {
		border: 1px dashed grey;
		margin: -1px;
		background-color: #ebebeb;

		&.sp-namefield,
		&.spClassSearchInbox,
		&.spClassEditInbox,
		&.spClassViewInbox {
			background-color: #fde9e2;
		}

		&.spClassSearchCheckbox,
		&.spClassEditCheckbox,
		&.spClassViewCheckbox {
			background-color: #ddfde5;
		}

		&.spClassSearchRadio,
		&.spClassEditRadio,
		&.spClassViewRadio {
			background-color: #dfebfd;
		}

		&.spClassEditUrl,
		&.spClassViewUrl {
			background-color: #fdf8d9;
		}

		&.spClassEditEmail,
		&.spClassViewEmail {
			background-color: #fdeaf5;
		}

		&.spClassEditImage,
		&.spClassViewImage {
			background-color: #e7fffd;
		}

		&.spClassSearchSelect,
		&.spClassEditSelect,
		&.spClassViewSelect {
			background-color: #ededfd;
		}

		&.spClassEditInfo,
		&.spClassViewInfo {
			background-color: #ffe7ec;
		}

		&.spClassSearchMSelect,
		&.spClassEditMSelect,
		&.spClassViewMSelect {
			background-color: #e8fdee;
		}

		&.spClassSearchText,
		&.spClassEditText,
		&.spClassViewText {
			background-color: #e3f5fd;
		}

		&.spClassEditButton,
		&.spClassViewButton {
			background-color: #f2ffd4;
		}

		&.spClassSearchCategory,
		&.spClassEditCategory {
			background-color: #fbe5f3;
		}

		&.spClassSearchCalendar,
		&.spClassEditCalendar,
		&.spClassViewCalendar {
			background-color: #e6fddd;
		}

		&.spClassEditGallery,
		&.spClassViewGallery {
			background-color: #fff1e6;
		}

		&.spClassSearchAggregation,
		&.spClassEditAggregation,
		&.spClassViewAggregation {
			background-color: #f1f6fe;
		}

		&.spClassEditProfile,
		&.spClassViewProfile {
			background-color: #f7f1fe;
		}

		&.spClassSearchMap,
		&.spClassEditMap,
		&.spClassViewMap {
			background-color: #f9fbde;
		}

		&.spClassViewMap {
			margin: 0;
		}

		&.spClassViewQRCode {
			background-color: #defef2;
		}

		&.spClassViewContact {
			background-color: #fbeadb;
		}

		&.spClassEditCoupon {
			background-color: #d7fbdd;
		}

		&.spClassSearchBirthday,
		&.spClassEditBirthday,
		&.spClassViewBirthday {
			background-color: #e1fdf5;
		}

		&.form-group {
			margin-bottom: 14px;
			margin-right: -14px;
			margin-left: -14px;
		}
	}

	// Test Colour output
	// ------------------------
	.debugOutput();
}
