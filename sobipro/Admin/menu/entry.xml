<definition>
	<header>
		<title value="MENU_LINK_TO_ENTRY"/>
	</header>

	<body>
		<p class="dk-jmenu-title">
			<text value="MENU_LINK_TO_ENTRY"/>
		</p>
		<p>
			<text value="MENU_LINK_TO_ENTRY_EXPL"/>
		</p>
		<fieldset show="no">
			<field type="text" name="entry" autocomplete="off" label="SOBI_SELECT_ENTRY_TYPE_TITLE" placeholder="SOBI_SELECT_ENTRY_TYPE" required="true" width="5"
			       class="spctrl-entry-chooser w-50"/>
			<field type="select" name="request[sptpl]" selected="template" multi="false" values="templates" label="SOBI_TPL_OVERRIDE" width="5" class="w-50"/>
		</fieldset>
		<p class="dk-jmenu-template">
			<text value="SOBI_TPL_OVERRIDE_EXPL"/>
		</p>

		<p class="mt-4">
			<text value="MENU_LINK_CONTINUE"/>
		</p>
		<div class="hidden" id="spctrl-entry-name">
			<text value="MENU_LINK_TO_SELECTED_ENTRY"/>
		</div>
	</body>

	<config>
		<calls>
			<call file="ctrl.adm.menu" method="entry"/>
		</calls>
		<hidden>
			<field name="sid" value="sectionId"/>
			<field name="section" value="sid"/>
			<field name="function-name" const="MENU_LINK_TO_SELECTED_ENTRY"/>
			<field name="params[interpreter]" const="ctrl.adm.menu.entryLabel"/>
		</hidden>
	</config>
</definition>
