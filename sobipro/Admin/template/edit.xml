<definition>
	<header>
		<file type="script" filename="adm.template"/>
	</header>

	<toolbar title="TP.EDIT_SITE_TITLE" class="template edit">
		<button type="apply" task="template.save" colour="save">
			<button type="duplicate" task="template.saveAs" colour="save"/>
			<button type="compileSave" task="template.compileSave" icon="file-alt" condition="file_ext=less" colour="save"/>
			<button type="compile" task="template.compile" icon="file" condition="file_ext=less"/>
		</button>
		<buttons type="sections" buttons="sections-list"/>
		<buttons type="options">
			<button type="url" task="panel"/>
			<button type="url" task="config" condition="acl.config"/>
			<button type="url" task="acl" condition="acl.admin"/>
			<button type="url" task="extensions.installed" condition="acl.apps"/>
			<button type="url" task="template.info" condition="acl.config"/>
			<button type="url" task="error" condition="acl.admin"/>
			<button type="help" target="_blank"/>
		</buttons>
	</toolbar>

	<body>
		<div class="row">
			<div class="col-lg-3" id="spctrl-menu">
				<menu/>
			</div>
			<div class="col-lg-9 sp-main-area">
				<message id="spctrl-message"/>
				<div class="dk-editor">
					<field type="textarea" name="file_content" editor="false" id="file_content" stand-alone="true" width="9" rows="4" style=""/>
				</div>
			</div>
		</div>
	</body>
	<config>
		<action value="index.php"/>
		<hidden>
			<field name="option" default="com_sobipro"/>
			<field name="task" default=""/>
			<field name="method" default="xhr"/>
			<field name="format" default="raw"/>
			<field name="pid" value="sid"/>
		</hidden>
	</config>
</definition>