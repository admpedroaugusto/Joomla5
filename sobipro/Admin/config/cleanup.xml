<definition>
	<header/>
	<toolbar title="CLEANUP.SITE_TITLE" class="config cleanup">
		<button task="config.cleanall" icon="hand-sparkles" label="TB.CLEAN_CACHES"/>
		<button task="cleanup.checks" icon="heartbeat" label="TB.CLEANUP.CHECK"/>
		<buttons type="cleanup" icon="recycle" invert-condition="trim" colour="delete">
			<button task="cleanup.all" icon="clone" label="TB.CLEANUP_ALL" colour="delete" confirm="TB.JS_CLEANUP_WARNING"/>
			<button task="cleanup.database" icon="database" label="TB.CLEANUP_DATABASE" colour="delete" confirm="TB.JS_CLEANUP_WARNING"/>
		</buttons>
		<buttons type="sections" buttons="sections-list"/>
		<buttons type="options">
			<button type="url" task="panel"/>
			<button type="url" task="config" condition="acl.config"/>
			<button type="url" task="acl" condition="acl.admin"/>
			<button type="url" task="extensions.installed" condition="acl.apps"/>
			<button type="url" task="template.info" condition="acl.config"/>
			<button type="url" task="error" condition="acl.admin"/>
			<button type="help" target="_blank"/>
		</buttons>
	</toolbar>

	<body>
		<div class="row">
			<div class="col-lg-3" id="spctrl-menu">
				<menu/>
			</div>
			<div class="col-lg-9 sp-main-area">
				<div class="alert alert-outline-gamma">
					<h4>
						<text value="CLEANUP.ATTENTION"/>
					</h4>
					<div>
						<text value="CLEANUP.DESCRIPTION"/>
					</div>
					<div class="fs-5 mt-2 text-danger">
						<text value="CLEANUP.WARNING"/>
					</div>
					<div class="mt-1 text-danger">
						<text value="CLEANUP.BETA"/>
					</div>
				</div>
				<message id="spctrl-message"/>
			</div>
		</div>
	</body>

	<config>
		<action value="index.php"/>
		<hidden>
			<field name="option" default="com_sobipro"/>
			<field name="task" default=""/>
		</hidden>
	</config>
</definition>
